
<h1>All Products</h1>

<div class="row">
  <% @all_products.each do |product| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="/recipes/<%= product.id %>">
        <p><%= product.id %></p>
        <p><%= product.name %></p>
        <p><%= product.price %></p>
        <p><%= product.image %></p>
        <p><%= product.description %></p>
        <div>
          <img src="<%= product.image %>" width="200" height="200">
        </div>
      </a>
    </div>
  </div>
  <% end %>
</div>
